  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nexwave-io/nexwave-ts.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/nexwave-io/nexwave-ts/tree/main/packages/cli",
  "bugs": {
    "url": "https://github.com/nexwave-io/nexwave-ts/issues"
  },
  "author": "Nexwave <hello@nexwave.io>",
