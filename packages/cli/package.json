  "keywords": [
    "nexwave",
    "cli",
    "command-line",
    "defi",
    "execution"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nexwave/sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
